<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GameFROScouting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GameFROScouting" parent="Base.Theme.GameFROScouting" />

    <style name="box_text" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>"
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="long_box_text" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="large_box_text" parent="Widget.AppCompat.TextView">z
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="type_box_text" parent="Widget.AppCompat.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|top</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">@string/default_type</item>
    </style>

    <style name="help_box_text" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal|left</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="header_text_dark" parent="Widget.AppCompat.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="header_text_light" parent="Widget.AppCompat.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="submit_button" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="info_input_text" parent="Widget.AppCompat.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="info_input_type" parent="Widget.AppCompat.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">@string/default_type</item>
    </style>

    <style name="notes_box_text_top" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>"
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="notes_box_text_bottom" parent="Widget.AppCompat.TextView">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>"
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="number_text" parent="Widget.AppCompat.TextView">
        <item name="android:paddingBottom">5dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="increment_buttons" parent="Widget.AppCompat.ImageButton">
        <item name="contentDescription">@string/content_desc</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>