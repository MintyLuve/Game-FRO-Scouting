<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/froBlue"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/main_header"
            style="@style/header_text_light"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="267dp"
            android:layout_height="5dp"
            android:background="@drawable/dotted_line_light"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/game_text"
            style="@style/header_text_light"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:background="@drawable/dotted_line_light"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/info_background"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/name"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="@string/default_type"
                android:background="@color/transparent"
                style="@style/info_input_type"
                android:padding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/team_num"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <Spinner
                android:id="@+id/teamSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/rob_pos"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <Spinner
                android:id="@+id/posSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/match_num"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="@string/default_type"
                android:background="@color/transparent"
                android:inputType="number"
                style="@style/info_input_type"
                android:padding="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:background="@drawable/box_background"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button1"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/transparent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:text="@string/start_scouting"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/textGrey"
            android:textSize="50sp"
            android:padding="20dp"
            android:gravity="center" />

    </FrameLayout>

</LinearLayout>