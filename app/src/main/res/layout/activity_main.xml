<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/froBlue"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/main_header"
            style="@style/header_text_light"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="267dp"
            android:layout_height="5dp"
            android:background="@drawable/dotted_line"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/game_logo"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:background="@drawable/dotted_line"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/start_background"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/name"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <EditText
                android:id="@+id/nameType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="@string/default_type"
                android:background="@color/transparent"
                style="@style/info_input_type"
                android:padding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/team_num"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <AutoCompleteTextView
                android:id="@+id/teamType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/default_type"
                android:background="@drawable/dropdown_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/rob_pos"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <Spinner
                android:id="@+id/posSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dropdown_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/match_num"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <EditText
                android:id="@+id/matchType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="@string/default_type"
                android:background="@color/transparent"
                android:inputType="number"
                style="@style/info_input_type"
                android:padding="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/hum_pos"
                style="@style/info_input_text"
                android:layout_weight="3"/>
            <Spinner
                android:id="@+id/humanSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dropdown_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:weightSum="4">
        <TextView
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/box_background"
            android:text="@string/start_scouting"
            android:fontFamily="@font/helvetica_bold"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            style="@style/misc_text"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:contentDescription="@string/content_desc"
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            style="@style/src_buttons"
            android:src="@drawable/menu_help_button"
            android:layout_marginStart="5dp"/>
    </LinearLayout>


</LinearLayout>