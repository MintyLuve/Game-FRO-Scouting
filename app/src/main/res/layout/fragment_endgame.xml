<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/darkBlue"
    android:weightSum="4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/endgame_header"
        style="@style/header_text_light"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="267dp"
        android:layout_height="5dp"
        android:background="@drawable/dotted_line"
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_desc" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/box_text"
                android:text="@string/eg_pos"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/posSpinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/dropdown_background"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/box_text"
                android:text="@string/eg_climb"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/climbSpinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/dropdown_background"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/box_text"
                android:text="@string/eg_buddy"
                android:layout_weight="1"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/buddySwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/long_box_white_background"
        android:layout_weight="1"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/long_box_text"
                android:text="@string/eg_os_left"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/leftSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/long_box_text"
                android:text="@string/eg_os_center"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/centerSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/long_box_text"
                android:text="@string/eg_os_right"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/rightSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/throwsBox"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/box_text"
                android:text="@string/eg_throws_made"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                android:gravity="center">
                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/made_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    style="@style/src_buttons"
                    android:src="@drawable/minus_number_button"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/made_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/default_number"
                    style="@style/number_text"
                    android:layout_weight="1"/>
                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/made_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    style="@style/src_buttons"
                    android:src="@drawable/plus_number_button"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="@style/box_text"
                android:text="@string/eg_throws_miss"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                android:gravity="center">
                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/miss_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    style="@style/src_buttons"
                    android:src="@drawable/minus_number_button"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/miss_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/default_number"
                    style="@style/number_text"
                    android:layout_weight="1"/>
                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/miss_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    style="@style/src_buttons"
                    android:src="@drawable/plus_number_button"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/throwsText"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="(The selected human player is NOT amp)"
            style="@style/header_text_light"
            android:paddingBottom="30dp"/>
        </LinearLayout>
</LinearLayout>