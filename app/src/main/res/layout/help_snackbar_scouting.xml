<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/behind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/content_desc"/>


    <LinearLayout
        android:id="@+id/mySnackbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="45dp"
        android:background="@drawable/help_scouting_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/help_header_1"
            style="@style/header_text_dark"
            android:layout_margin="5dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_screen_top"
            style="@style/help_box_text"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="267dp"
            android:layout_height="5dp"
            android:background="@drawable/dotted_line"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/help_header_2"
            style="@style/header_text_dark"
            android:layout_margin="5dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_weight="1"/>

        <TextView
            style="@style/help_box_text"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/help_screen_bottom" />
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/help_reference_img"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>