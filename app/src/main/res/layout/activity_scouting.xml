<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:id="@+id/replaceFrame"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/menu_bar_background"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="6">

        <ImageButton
            android:contentDescription="@string/content_desc"
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            style="@style/increment_buttons"
            android:src="@drawable/menu_bars_button"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_items"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/nothing"
            android:layout_gravity="center"
            app:itemRippleColor="@color/white"
            app:itemIconSize="55dp"
            app:itemBackground="@drawable/nothing"
            app:menu="@menu/menu_pages"
            android:layout_weight="4"/>

        <ImageButton
            android:contentDescription="@string/content_desc"
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            style="@style/increment_buttons"
            android:src="@drawable/menu_help_button"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirmFrame"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/box_background"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/submit_data"
            android:fontFamily="@font/helvetica"
            android:layout_weight="1"
            style="@style/misc_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:weightSum="2">
            <ImageButton
                android:contentDescription="@string/content_desc"
                android:id="@+id/yesButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                style="@style/increment_buttons"
                android:src="@drawable/submit_yes_button"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"/>
            <ImageButton
                android:contentDescription="@string/content_desc"
                android:id="@+id/noButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                style="@style/increment_buttons"
                android:src="@drawable/submit_no_button"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>