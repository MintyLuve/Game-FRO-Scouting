<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/midBlue"
    android:weightSum="5">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/teleop_header"
        style="@style/header_text_dark"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="267dp"
        android:layout_height="5dp"
        android:background="@drawable/dotted_line_dark"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_desc" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_background"
            style="@style/box_text"
            android:text="@string/default_text"
            />
        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/box_background"
            android:layout_weight="1"
            style="@style/box_text"
            android:text="@string/default_text"
            />
        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/box_background"
            android:layout_weight="1"
            style="@style/box_text"
            android:text="@string/default_text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/long_box_white"
        android:layout_weight="1"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/mid_long_box_grey"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/long_box_grey"
        android:layout_weight="1"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/mid_long_box_white"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/long_box_white"
        android:layout_weight="1"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/mid_long_box_grey"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/long_box_text"
            android:text="@string/default_text"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        app:itemRippleColor="@color/white"
        app:itemIconSize="55dp"
        app:menu="@menu/bottom_nav_menu"/>


</LinearLayout>